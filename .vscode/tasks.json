{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test (X)",
            "type": "shell",
            "linux": {
                "command": "stable env ponyc -d && ./test",
            },
            "osx": {
                "command": "stable env ponyc -d && ./test",
            },
            "windows": {
                "command": "..\\build_and_test.bat",
            },
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
        },
        {
            "label": "benchmark (X)",
            "type": "shell",
            "command": "stable env ponyc && ./microbenchmarks",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/microbenchmarks"
            },
        }
    ]
}
